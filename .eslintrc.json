{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": 2,
    "indent": [
      "error",
      2
    ],
    "react/no-unescaped-entities": 0
  },
  "settings": {
    "react": {
      "version": "detect",
      "pragma": "React"
    }
  }
}
