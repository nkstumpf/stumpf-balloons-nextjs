{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@layouts/*": ["layouts/*"],
    },
    "target": "es2020"
  },
  "typeAcquisition": {
    "exclude": ["dotenv", "node_modules"]
  },
  "exclude": [
    "out",
    ".next",
    "node_modules/"
  ]
}
